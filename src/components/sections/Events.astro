---
import Button from '@components/common/Button.astro';
import Carousel from '@components/common/Carousel.astro';
import CarouselSlide from '@components/common/CarouselSlide.astro';
import LeftElement from '@components/common/LeftElement.astro';
import TitleDivider from '@components/common/TitleDivider.astro';
import type { Event } from 'src/data/events';

interface Props {
  class?: string;
  events: Event[];
}
const { class: className, events } = Astro.props;
---

<section class:list={[className]}>
  <div class='container'>
    <TitleDivider class='text-secondary mb-8'>Eventos</TitleDivider>
    <Carousel class='mb-8'>
      {
        events.map((event) => (
          <CarouselSlide imageUrl={event.imagePath} type='events' />
        ))
      }
    </Carousel>
    <div class='flex justify-center'>
      <Button variant='secondary' href='/eventos'>Ver Mas</Button>
    </div>
  </div>
  <LeftElement />
</section>
