---
import Button from '@components/common/Button.astro';
import TitleDivider from '@components/common/TitleDivider.astro';
import type { Event } from 'src/data/events';
import LeftElement from './elements/LeftElement.astro';
import Carousel from './elements/carousel/Carousel.astro';

interface Props {
  class?: string;
  events: Event[];
  title?: string;
  buttonText?: string;
  buttonLink?: string;
}
const { events, title = 'Eventos', buttonLink, buttonText } = Astro.props;
---

<section class='relative pt-16 pb-12 md:pt-32 md:pb-16 lg:pt-40 lg:pb-28'>
  <div class='container'>
    <TitleDivider class='text-secondary mb-8'>{title}</TitleDivider>

    {
      events.length > 0 && (
        <Carousel items={events} class='mb-8' type='events' />
      )
    }

    {
      buttonText && buttonLink && (
        <div class='flex justify-center'>
          <Button variant='secondary' href={buttonLink}>
            {buttonText}
          </Button>
        </div>
      )
    }
  </div>
  <LeftElement />
</section>
