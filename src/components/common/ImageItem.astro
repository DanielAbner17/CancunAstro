---
interface Props {
  imagePath: string;
  title: string;
  type: string;
}

const { imagePath, title, type } = Astro.props;
const imageSrc =
  type === 'stores'
    ? imagePath
      ? `/src/images/stores/${imagePath}`
      : `/src/images/stores/404.png`
    : type === 'events'
      ? imagePath
        ? `/src/images/events/${imagePath}`
        : `/src/images/events/404.png`
      : imagePath
        ? `/src/images/${imagePath}`
        : `/src/images/404.png`;
---

<img
  class='w-full'
  src={imageSrc}
  alt={`${title}-${type}`}
  width={700}
  height={700}
/>
