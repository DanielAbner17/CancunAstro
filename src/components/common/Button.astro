---
interface Props {
  variant: 'primary' | 'secondary' | 'danger';
  href: string;
  target?: '_blank' | '_self';
  class?: string;
}

const {
  variant = 'primary',
  href,
  class: className,
  target = '_self',
} = Astro.props;
let buttonClass = className;

const variantClasses: Record<string, string> = {
  primary: 'bg-primary border-primary hover:bg-transparent hover:text-primary',
  secondary: 'bg-gray-500 hover:bg-gray-600', // TODO: Change this if necessary
  danger: 'bg-red-500 hover:bg-red-600', // TODO: Change this if necessary
};

if (variantClasses[variant]) {
  buttonClass += ` ${variantClasses[variant]}`;
}
---

<a
  href={href}
  target={target}
  class:list={buttonClass}
  class='cursor-pointer transition-colors border-2 bg-primary py-2 px-6 rounded-md text-white font-semibold no-underline focus:outline-none inline-block'
>
  <slot />
</a>
