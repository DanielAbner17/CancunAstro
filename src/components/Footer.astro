---
import React from 'react';
import {
  FaRegCalendarAlt,
  FaLocationArrow,
  FaPhoneAlt,
  FaFacebook,
  FaInstagram,
} from 'react-icons/fa';
---

<footer class='bg-secondary text-white py-12 rounded-t-lg'>
  <div
    class='container mx-auto px-4 max-w-screen-lg flex flex-col md:flex-row md:justify-between'
  >
    <div class='mb-6 md:mb-0'>
      <h2 class='text-xl font-bold mb-2'>Contacto</h2>
      <p class='flex items-center mb-1'>
        <FaRegCalendarAlt className='mr-2' />
        Lunes a Domingo de 11:00 am - 10:00 pm
      </p>
      <ul>
        <li class='flex items-center mb-1'>
          <FaLocationArrow className='mr-3' />
          <a
            href='https://maps.app.goo.gl/xUMc9rSk52MibQwZ7'
            class='hover:underline'
          >
            518, Av. Nichupté Supermanzana 51 Manzana 18, Sin Nombre, 77536
            Cancún, Q.R.
          </a>
        </li>
        <li class='flex items-center'>
          <FaPhoneAlt className='mr-3' />
          <a href='tel: +529982061694' class='hover:underline'>
            +52 (998)-206-1694
          </a>
        </li>
      </ul>
    </div>
    <div class='mb-6 md:mb-0'>
      <h2 class='text-xl font-bold mb-2'>Mapa del Sitio</h2>
      <ul class='gap-y-1 flex flex-col'>
        <li><a href='/' class='hover:underline'>Inicio</a></li>
        <li><a href='/directorio' class='hover:underline'>Directorio</a></li>
        <li><a href='/eventos' class='hover:underline'>Eventos</a></li>
        <li><a href='/promociones' class='hover:underline'>Promociones</a></li>
        <li><a href='#footer' class='hover:underline'>Contacto</a></li>
      </ul>
    </div>
    <div>
      <h2 class='text-xl font-bold mb-2'>Síguenos</h2>
      <div class='flex space-x-4'>
        <a href='#' class='hover:text-gray-300'>
          <FaFacebook className='text-2xl' />
        </a>
        <a href='#' class='hover:text-gray-300'>
          <FaInstagram className='text-2xl' />
        </a>
      </div>
    </div>
  </div>
</footer>
