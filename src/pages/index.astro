---
import Layout from '../layouts/Layout.astro';
import { stores } from 'src/data/stores.js';
import { events } from 'src/data/events.js';
import { Images } from '../data/homeGallery.ts';
import Hero from '@components/home_sections/Hero.astro';
import Events from '@components/home_sections/Events.astro';
import Stores from '@components/home_sections/Stores.astro';
import Nosotros from '@components/home_sections/Nosotros.astro';
---

<Layout title='Home | Gran Plaza Cancun'>
  <main>
    <Hero />

    <Events
      class='relative pt-16 pb-12 md:pt-32 md:pb-16 lg:pt-40 lg:pb-28'
      events={events}
      title='Eventos'
      buttonLink='/eventos'
      buttonText='Ver Eventos'
    />

    <Stores
      title='Nuestras Tiendas'
      stores={stores}
      class='pt-16 pb-12 md:pt-32 md:pb-16 lg:pt-24 lg:pb-24'
      buttonLink='/tiendas'
      buttonText='Ver Tiendas'
    />

    <Nosotros class='py-12 md:py-16 lg:py-28' images={Images} />
  </main>
</Layout>
