---
import Layout from 'src/layouts/Layout.astro';
import PageHero from '@components/common/PageHero.astro';
import ImageGrid from '@components/common/ImagesGrid.astro';

const images = await Astro.glob(
  '/src/images/events/*.{jpeg,jpg,png,gif,webp}'
).then((files) => {
  return files.map((file) => file.default);
});
---

<Layout title='Eventos'>
  <PageHero title='Eventos' />
  <section class='py-12 md:py-16 lg:py-28'>
    <div class='container'>
      <ImageGrid images={images} enableThreeColumns />
    </div>
  </section>
</Layout>
