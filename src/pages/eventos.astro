---
import Layout from 'src/layouts/Layout.astro';
import PageHero from '@components/common/PageHero.astro';
import { events } from 'src/data/events.js';
import ImageItem from '@components/common/ImageItem.astro';
---

<Layout title='Eventos'>
  <PageHero title='Eventos' />
  <section class='pt-16 pb-12 md:pt-32 md:pb-16 lg:pt-40 lg:pb-28'>
    <div class='container'>
      <div
        class='grid grid-cols-1 gap-px
      sm:grid-cols-2
      md:grid-cols-3
      lg:grid-cols-4
      xl:grid-cols-5'
      >
        {
          events.map((event) => (
            <ImageItem
              imagePath={event.imagePath}
              title={event.title}
              type='events'
            />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
